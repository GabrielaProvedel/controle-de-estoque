<Window x:Class="controle_de_estoque.View.Notificacoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controle_de_estoque.View"
        mc:Ignorable="d"
        Title="Notificacoes" Height="500" Width="400">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <DockPanel>
                    <Label HorizontalAlignment="Center" FontSize="18">Notificações</Label>

                    <Button Height="25" Width="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30,5" Background="White" BorderBrush="White" Click="Button_Atualizar">
                        <Image>
                            <Image.Source>
                                <BitmapImage UriSource="/Imagens/atualizar.jpg"></BitmapImage>
                            </Image.Source>
                        </Image>
                    </Button>
                </DockPanel>
                <ListView Name="notificacoes" FontSize="12">

                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
