<Window x:Class="controle_de_estoque.View.RemoverCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controle_de_estoque.View"
        mc:Ignorable="d"
        Title="RemoverCategoria" Height="300" Width="400">
    <Grid Background="White">
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50" FontSize="20">Remover categoria</Label>
        <Grid Background="LightGray" VerticalAlignment="Top" Height="100" Width="300" Margin="0,100,0,0">
            <StackPanel>
                <DockPanel Height="50" Margin="5,0">
                    <TextBlock VerticalAlignment="Center" FontSize="15">Categoria:</TextBlock>
                    <ComboBox Name="categoria" BorderThickness="0" Height="20"  Margin="5,0" FontSize="14" IsEditable="True">
                    </ComboBox>
                </DockPanel>
                <Button Background="Gray" Height="30" Width="150" FontSize="16" VerticalAlignment="Center" Click="Button_Remover">Remover</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>